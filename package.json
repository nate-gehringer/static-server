  "description": "`static-server.js`: A fine HTTP(S) development server for static content",
  "homepage": "https://backwater.systems/",
  "license": "Apache-2.0",
  "name": "@backwater-systems/static-server",
  "repository": {
    "type": "git",
    "url": "https://code.backwater.systems/backwater-systems/static-server.git/"
  },
  "type": "module",
  "version": "1.0.0",
  "dependencies": {
    "koa": "^2.13.4",
    "koa-conditional-get": "^3.0.0",
    "koa-etag": "^4.0.0",
    "koa-static": "^5.0.0"
  },
  "devDependencies": {
    "cpy-cli": "^3.1.1",
    "del-cli": "^4.0.0"
  },
  "scripts": {
    "build": "npm run clean:build && npm run build:javascript && npm run build:assets",
    "build:javascript": "cpy '**/*.js' '../dist/' --cwd 'src/' --parents",
    "build:assets": "cpy '**/*.json' '../dist/' --cwd 'src/' --parents",
    "clean": "npm run clean:build",
    "clean:build": "del-cli dist/",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
